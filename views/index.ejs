<!DOCTYPE html>
<html>
<head>
  <title>File Data</title>
  <head>
    <!-- Other code -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <!-- Other code -->
  </head>
  
  <style>
    body {
      background-color: royalblue;
      color: white;
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
    }

    h1 {
      text-align: left;
      margin-top: 40px;
      margin-left: 8px;
      font-size: 24px;
      font-weight: bold;
      text-transform: uppercase;
      display: block;
      
    }

    .toggle-container {
      display: flex;
      justify-content: flex-start;
      padding: 16px;
    }

    .toggle-button {
      padding: 8px 16px;
      background-color: #007bff;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      font-size: 14px;
      margin-right: 8px;
      color: white;
      display: block; /* Added */
      width: 100%; /* Added */
      text-align: left
    }

    .toggle-button:hover {
      background-color: #0056b3;
    }

    .menu-content {
      display: none;
      padding: 16px;
      background-color: white;
      border-radius: 4px;
      margin-top: 16px;
    }

    .menu-content label {
      display: flex;
      align-items: center;
      margin-bottom: 8px;
      color: royalblue;
    }

    .menu-content input[type="checkbox"] {
      margin-right: 8px;
      border: 2px solid white;
    }

    .menu-content span {
      padding: 4px 8px;
      background-color: rgba(255, 255, 255, 0.1);
      border-radius: 4px;
    }
  </style>
  <script>
    function toggleMenu() {
      var menuContent = document.getElementById('menu-content');
      menuContent.style.display = menuContent.style.display === 'none' ? 'block' : 'none';
    }

    function toggleMenuAbove() {
      var menuAboveContent = document.getElementById('menu-above-content');
      menuAboveContent.style.display = menuAboveContent.style.display === 'none' ? 'block' : 'none';
    }

    function selectAll() {
      var checkboxes = document.getElementsByName('selectedItems');
      checkboxes.forEach(function(checkbox) {
        checkbox.checked = true;
      });
    }

    function deselectAll() {
      var checkboxes = document.getElementsByName('selectedItems');
      checkboxes.forEach(function(checkbox) {
        checkbox.checked = false;
      });
    }

    function handleCheckboxChange(checkbox) {
      var selectAllCheckbox = document.getElementById('select-all-checkbox');
      if (!checkbox.checked) {
        selectAllCheckbox.checked = false;
      }
    }
  </script>
</head>
<body>
  <h1>File Data</h1>
  
  <div class="toggle-container">
    <button class="toggle-button d-block" onclick="toggleMenu()"><i class="fas fa-clock"></i>  Toggle Menu</button>
    
  </div>
  <div id="menu-content" class="menu-content">
    <label>
      <input type="checkbox" id="select-all-checkbox" onclick="selectAll()">
      <span>Select All</span>
    </label>
    <% data.forEach((item) => { %>
      <label>
        <input type="checkbox" name="selectedItems" value="<%= item.path %>" id="<%= item.path %>-checkbox" onchange="handleCheckboxChange(this)">
        <span><%= item.path %></span>
      </label>
    <% }); %>

  </div>
  <footer>
    <p></p>
  </footer>
</body>
</html>
